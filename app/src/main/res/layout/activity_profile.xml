<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_TopContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toTopOf="@id/iv_BottomContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.5"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_BottomContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_TopContainer"
        app:layout_constraintVertical_weight="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_Settings"
        style="@style/TextStyBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_margin_16"
        android:text="@string/settings"
        android:textColor="@color/gray_very_light"
        android:textSize="@dimen/textSize_24sp"
        android:theme="@style/TextStyBasic"
        app:layout_constraintStart_toStartOf="@+id/iv_TopContainer"
        app:layout_constraintTop_toTopOf="@+id/iv_TopContainer"
        app:layout_constraintBottom_toTopOf="@+id/cv_Photo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="57dp"
        android:layout_margin="@dimen/vertical_margin_16"
        app:layout_constraintEnd_toEndOf="@+id/iv_TopContainer"
        app:layout_constraintStart_toStartOf="@+id/iv_TopContainer"
        app:layout_constraintTop_toBottomOf="@+id/tv_Settings"
        app:layout_constraintBottom_toTopOf="@+id/tv_Name">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_PhotoProfile"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/mok_green" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_Name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"

        android:text="@string/name"
        android:textColor="@color/gray_very_light"
        android:textSize="@dimen/textSize_18sp"
        android:theme="@style/TextStyBasic"
        app:layout_constraintBottom_toTopOf="@+id/tv_Career"
        app:layout_constraintEnd_toEndOf="@+id/iv_TopContainer"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/iv_TopContainer"
        app:layout_constraintTop_toBottomOf="@+id/cv_Photo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_Career"
        style="@style/TextStyBasic"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/career"
        android:textColor="@color/white_my"
        app:layout_constraintEnd_toEndOf="@+id/iv_TopContainer"
        app:layout_constraintStart_toStartOf="@+id/iv_TopContainer"
        app:layout_constraintTop_toBottomOf="@+id/tv_Name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_HomeAddress"
        style="@style/TextStyBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/home_address"
        android:textColor="@color/white_my"
        app:layout_constraintBottom_toBottomOf="@+id/iv_TopContainer"
        app:layout_constraintEnd_toEndOf="@+id/iv_TopContainer"
        app:layout_constraintStart_toStartOf="@+id/iv_TopContainer"
        app:layout_constraintTop_toBottomOf="@+id/tv_Career"
        app:layout_constraintVertical_bias="0.211" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_goToSettingsAndFill"
        style="@style/TextStyBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin_offset_from_edge_screen_16dp"
        android:text="@string/go_to_settings_and_fill_out_the_profile"
        android:textColor="@color/gray_text"
        app:layout_constraintBottom_toTopOf="@+id/bt_EditProfile"
        app:layout_constraintEnd_toEndOf="@+id/iv_BottomContainer"
        app:layout_constraintStart_toStartOf="@+id/iv_BottomContainer" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_EditProfile"
        style="@style/TextStyBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_ViewMyContacts"
        android:layout_margin="@dimen/margin_offset_from_edge_screen_16dp"
        android:background="@drawable/button_background_black"
        android:text="@string/edit_profile"
        android:textAllCaps="false"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/textSize_14sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_ViewMyContacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_ViewMyContacts"
        style="@style/TextStyBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_offset_from_edge_screen_16dp"
        android:background="@drawable/button_background_orange"
        android:backgroundTint="?attr/colorPrimary"
        android:text="@string/view_my_contacts"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/textSize_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_BottomContainer"
        app:layout_constraintEnd_toEndOf="@+id/iv_BottomContainer"
        app:layout_constraintStart_toStartOf="@+id/iv_BottomContainer" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_InstagramLog"
        style="@style/logo_ImageView"
        android:layout_above="@+id/bt_EditProfile"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_goToSettingsAndFill"
        app:layout_constraintEnd_toStartOf="@+id/iv_VkLog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_TopContainer"
        app:srcCompat="@drawable/ic_instagram_log" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_VkLog"
        style="@style/logo_ImageView"
        android:layout_alignBottom="@+id/iv_InstagramLog"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_goToSettingsAndFill"
        app:layout_constraintEnd_toStartOf="@+id/iv_FacebookLog"
        app:layout_constraintStart_toEndOf="@+id/iv_InstagramLog"
        app:layout_constraintTop_toBottomOf="@+id/iv_TopContainer"
        app:srcCompat="@drawable/ic_vk_log" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_FacebookLog"
        style="@style/logo_ImageView"
        android:layout_alignBottom="@+id/iv_InstagramLog"
        app:layout_constraintBottom_toTopOf="@+id/tv_goToSettingsAndFill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_VkLog"
        app:layout_constraintTop_toBottomOf="@+id/iv_TopContainer"
        app:srcCompat="@drawable/ic_facebook_log" />

</androidx.constraintlayout.widget.ConstraintLayout>


