<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_TopContainer"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:background="?attr/colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_BottomContainer"
        android:layout_width="match_parent"
        android:layout_height="512dp"
        android:background="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_TopContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_AddContacts"
        style="@style/TextStyBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_16"
        android:text="@string/add_contacts"
        android:textColor="@color/gray_very_light"
        android:textSize="@dimen/textSize_18sp"
        android:theme="@style/TextStyBasic"
        app:layout_constraintEnd_toEndOf="@+id/iv_TopContainer"
        app:layout_constraintStart_toStartOf="@+id/iv_TopContainer"
        app:layout_constraintTop_toTopOf="@+id/iv_TopContainer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_ArrowBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_offset_from_edge_screen_16dp"
        android:paddingTop="@dimen/margin_offset_from_edge_screen_16dp"
        app:layout_constraintStart_toStartOf="@+id/iv_TopContainer"
        app:layout_constraintTop_toTopOf="@+id/iv_TopContainer"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_PhotoProfile"
        android:layout_width="113dp"
        android:layout_height="113dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_TopContainer"
        app:layout_constraintEnd_toEndOf="@+id/iv_TopContainer"
        app:layout_constraintStart_toStartOf="@+id/iv_TopContainer"
        app:layout_constraintTop_toBottomOf="@+id/tv_AddContacts"
        app:srcCompat="@drawable/ic_mok" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_Save"
        style="@style/TextStyBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_offset_from_edge_screen_16dp"
        android:background="@drawable/button_background_orange"
        android:backgroundTint="?attr/colorPrimary"
        android:text="@string/save"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/textSize_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_BottomContainer"
        app:layout_constraintEnd_toEndOf="@+id/iv_BottomContainer"
        app:layout_constraintStart_toStartOf="@+id/iv_BottomContainer" />


</androidx.constraintlayout.widget.ConstraintLayout>


