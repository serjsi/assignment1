<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/horizontal_margin_16"
    android:layout_marginTop="@dimen/vertical_margin_8"
    android:layout_marginEnd="@dimen/horizontal_margin_16"
    android:layout_marginBottom="@dimen/vertical_margin_8"
    android:background="@drawable/corner_grey"
    >

    <!--Add image view, We will not set any data here.-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_Photo"
        android:layout_width="@dimen/photo_item_width"
        android:layout_height="@dimen/photo_item_height"
        android:layout_margin="@dimen/vertical_margin_8"
        android:scaleType="fitCenter"
        android:src="@drawable/mok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginStart="@dimen/textSize_16sp"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/textSize_18sp"
            android:theme="@style/TextStyBasic"
            app:layout_constraintStart_toEndOf="@+id/iv_Photo"
            app:layout_constraintTop_toTopOf="@+id/iv_Photo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_Career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/career"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="@dimen/textSize_12sp"
            android:theme="@style/TextStyBasic"
            app:layout_constraintBottom_toBottomOf="@+id/iv_Photo"
            app:layout_constraintStart_toStartOf="@+id/tv_Name"
            app:layout_constraintTop_toBottomOf="@+id/tv_Name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_margin_16"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_basket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/tv_Name"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

