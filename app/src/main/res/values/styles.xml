<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyBasic">
        <item name="android:textColor">#B2B2B3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textColor">#B2B2B3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>

    <style name="TextInputLayout">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/white_my</item>
        <item name="endIconTint">@color/gray</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextInputEditText" parent="">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_my</item>
        <item name="android:textSize">@dimen/textSize_18sp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="TextInputLayoutHintText">
        <item name="android:textSize">@dimen/textSize_14sp</item>
        <item name="endIconTint">@color/gray_very_light</item>
        <item name="android:gravity">top</item>

    </style>


    <style name="logo_ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

</resources>
